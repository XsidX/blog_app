<section class="relative">
  <%= render 'layouts/user_card', user: @user %>
  <%= render 'layouts/messages' %>

  <!--sort @posts in desc order of time created-->
  <% @posts = @posts.sort_by(&:created_at).reverse %>
  <% @posts.each do |post| %>
    <%= render 'layouts/post_card', post: post, comment: CommentsController.new.new %>
  <% end %>
  <div class="flex flex-col items-center">
  <span class="text-sm text-gray-700 dark:text-gray-400">
      Showing <span class="font-semibold text-gray-900 dark:text-white">1</span> to <span class="font-semibold text-gray-900 dark:text-white">2 posts</span> of <span class="font-semibold text-gray-900 dark:text-white"><%= @user.posts_count %></span> Entries
  </span>
    <div class="inline-flex mt-2 xs:mt-0">
      <button class="py-2 px-4 text-sm font-medium text-white bg-stone-600 rounded-l hover:bg-gray-900 dark:bg-gray-800 dark:border-gray-700 dark:text-gray-400 dark:hover:bg-gray-700 dark:hover:text-white">
        Prev
      </button>
      <button class="py-2 px-4 text-sm font-medium text-white bg-stone-600 rounded-r border-0 border-l border-gray-700 hover:bg-gray-900 dark:bg-gray-800 dark:border-gray-700 dark:text-gray-400 dark:hover:bg-gray-700 dark:hover:text-white">
        Next
      </button>
    </div>
  </div>
</section>




<div class="flex gap-4">
  <div class="max-w-xs h-1/2 bg-white rounded-lg shadow-md dark:bg-gray-800 dark:border-gray-700 px-5">
    <img class="rounded-t-lg mt-8 h-32 w-32" src=<%= current_user.photo %> alt="profile">
    <div class="py-5">
      <a href="#">
        <h5 class="mb-2 text-xl font-bold tracking-tight text-gray-900 dark:text-white"><%= current_user.name %></h5>
      </a>
      <p class="mb-3 font-normal text-gray-700 dark:text-gray-400"><%= current_user.bio %></p>
      <button type="button" class="inline-flex items-center py-2 px-4 text-sm font-medium text-white bg-stone-600 rounded-r border-0 border-l border-gray-700 hover:bg-gray-900 dark:bg-gray-800 dark:border-gray-700 dark:text-gray-400 dark:hover:bg-gray-700 dark:hover:text-white">
        <%= link_to 'Read more', user_path(current_user) %>
        <svg aria-hidden="true" class="ml-2 -mr-1 w-4 h-4" fill="currentColor" viewBox="0 0 20 20" xmlns="http://www.w3.org/2000/svg"><path fill-rule="evenodd" d="M10.293 3.293a1 1 0 011.414 0l6 6a1 1 0 010 1.414l-6 6a1 1 0 01-1.414-1.414L14.586 11H3a1 1 0 110-2h11.586l-4.293-4.293a1 1 0 010-1.414z" clip-rule="evenodd"></path></svg>
      </button>
    </div>
  </div>

  <div class="w-full">
    <%= form_for(resource, as: resource_name, url: registration_path(resource_name), data: { turbo: false}, html: { method: :put }) do |f| %>
      <div class="bg-white py-8 shadow sm:rounded-lg px-7">
        <%= render "devise/shared/error_messages", resource: resource %>
        <h5 class="mb-4 text-xl font-bold tracking-tight text-gray-900 dark:text-white">General information</h5>
        <div class="flex flex-col gap-1 mb-3">
          <%= f.label :name, class: "block text-sm font-medium text-gray-700"%>
          <%= f.text_field :name, autofocus: true, class: "appearance-none block w-full px-3 py-2 border border-gray-300 rounded-md shadow-sm placeholder-gray-400 focus:outline-none focus:ring-blue-500 focus:border-blue-500 sm:text-sm" %>
        </div>
        <div class="flex flex-col gap-1 mb-3">
          <%= f.label :photo, class: "block text-sm font-medium text-gray-700"%>
          <%= f.text_field :photo, autofocus: true, class: "appearance-none block w-full px-3 py-2 border border-gray-300 rounded-md shadow-sm placeholder-gray-400 focus:outline-none focus:ring-blue-500 focus:border-blue-500 sm:text-sm" %>
        </div>
        <div class="flex flex-col gap-1 mb-3">
          <%= f.label :bio, class: "block text-sm font-medium text-gray-700"%>
          <%= f.text_area :bio, rows: 5, autofocus: true, class: "appearance-none block w-full px-3 py-2 border border-gray-300 rounded-md shadow-sm placeholder-gray-400 focus:outline-none focus:ring-blue-500 focus:border-blue-500 sm:text-sm" %>
        </div>
        <div class="flex flex-col gap-1 mb-3">
          <%= f.label :email, class: "block text-sm font-medium text-gray-700"%>
          <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "appearance-none block w-full px-3 py-2 border border-gray-300 rounded-md shadow-sm placeholder-gray-400 focus:outline-none focus:ring-blue-500 focus:border-blue-500 sm:text-sm" %>
        </div>
      </div>
      <div class="bg-white my-4 shadow sm:rounded-lg px-7 py-8">
        <h5 class="mb-4 text-xl font-bold tracking-tight text-gray-900 dark:text-white">Password information</h5>
        <div class="grid grid-cols-2 gap-4">
          <div class="flex flex-col gap-1 col-span-1">
            <%= f.label :current_password, class: "block text-sm font-medium text-gray-700" %>
            <%= f.password_field :current_password, autocomplete: "current-password", class: "appearance-none block w-full px-3 py-2 border border-gray-300 rounded-md shadow-sm placeholder-gray-400 focus:outline-none focus:ring-blue-500 focus:border-blue-500 sm:text-sm" %>
          </div>
          <div class="flex flex-col gap-1 col-span-1">
            <%= f.label :password, class: "block text-sm font-medium text-gray-700" %>
            <%= f.password_field :password, autocomplete: "new-password", class: "appearance-none block w-full px-3 py-2 border border-gray-300 rounded-md shadow-sm placeholder-gray-400 focus:outline-none focus:ring-blue-500 focus:border-blue-500 sm:text-sm" %>
          </div>
          <div class="flex flex-col gap-1 col-span-1">
            <%= f.label :password_confirmation, class: "block text-sm font-medium text-gray-700" %><br />
            <%= f.password_field :password_confirmation, autocomplete: "new-password", class: "appearance-none block w-full px-3 py-2 border border-gray-300 rounded-md shadow-sm placeholder-gray-400 focus:outline-none focus:ring-blue-500 focus:border-blue-500 sm:text-sm" %>
          </div>
        </div>
        <h6 class="text-sm text-gray-700 mt-4">Password requirements</h6>
        <h6 class="text-sm text-gray-500">Ensure that these requirements are met:</h6>
        <ul class="list-disc list-inside text-xs text-gray-500 mr-8">
          <li>We need your current password to confirm your changes</li>
          <li>Leave password blank if you don't want to change it</li>
          <li>Your password must have at least 6 characters</li>
        </ul>
      </div>
      <div class="mt-4 flex gap-3">
        <button type="submit" class="py-2 px-5 border border-transparent rounded-md shadow-sm text-sm font-medium text-white bg-blue-600 hover:bg-blue-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-blue-500">Update</button>
        <button type="button" class="py-2 px-4 text-sm font-medium text-white bg-stone-600 rounded-r border-0 border-l border-gray-700 hover:bg-gray-900 dark:bg-gray-800 dark:border-gray-700 dark:text-gray-400 dark:hover:bg-gray-700 dark:hover:text-white"><%= link_to "Cancel", :back %></button>
      </div>
    <% end %>
    <div class="bg-white my-4 shadow sm:rounded-lg px-7 py-8 grid grid-cols-6">
      <div class="col-span-4 text-sm flex flex-col gap-1">
        <h3>Cancel my account</h3>
        <p class="text-gray-500">Once you cancel your account, there is no going back. Please be certain. </p>
      </div>
      <div class="col-span-2 flex justify-center items-center">
        <button type="submit" class="px-5 py-2 border border-transparent rounded-md shadow-sm text-sm font-medium text-white bg-red-500 hover:bg-red-600 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-red-500"><%= link_to 'Cancel my account', registration_path(resource_name), data: { turbo_method: :delete, turbo_confirm: 'Are you sure'} %></button>
      </div>
    </div>
  </div>
</div>

